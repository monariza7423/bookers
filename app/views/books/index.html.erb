<h1>Books</h1>

  <table>
    <thead>
      <tr>
        <th>title</th>
        <th>body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <% @books.each do |book| %>
      <tbody>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td>
            <%= link_to "show", book_path(book.id) %>
            <%= link_to "edit", edit_book_path(book.id) %>
            <%= link_to "destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are You Sure?" %>
          </td>
        </tr>
      </tbody>
    <% end %>
  </table>



<h2>New Book</h2>
<%= form_with model:@book do |f| %>
  <h4>title</h4>
  <%= f.text_field :title %>

  <h4>body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'createbook' %>
<% end %>



